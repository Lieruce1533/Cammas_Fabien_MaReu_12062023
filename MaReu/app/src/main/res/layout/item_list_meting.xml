<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_list_meeting_hour"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="144dp"
        android:background="@drawable/ic_rounded_edge_light_grey"
        android:gravity="center"
        tools:text="Hour"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/item_list_meeting_room_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_list_meeting_title">

    </TextView>

    <TextView
        android:id="@+id/item_list_meeting_salle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintStart_toEndOf="@id/item_list_meeting_hour"
        app:layout_constraintTop_toBottomOf="@id/item_list_meeting_title"
        app:layout_constraintEnd_toStartOf="@id/item_list_meeting_room_name"
        android:text="@string/salle"
        android:gravity="center"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/item_list_meeting_room_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="0dp"
        android:gravity="center"
        android:background="@drawable/ic_rounded_edge_light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_list_meeting_salle"
        app:layout_constraintTop_toBottomOf="@id/item_list_meeting_title"
        android:textStyle="bold"

        tools:text="Oreo">

    </TextView>

    <TextView
        android:id="@+id/item_list_meeting_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:gravity="center"
        android:background="@drawable/ic_rounded_edge_title"

        tools:text="The Title of the Meeting"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_list_meeting_hour"
        tools:text="Participants 1, Participants 2, Participants 3"
        >

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>