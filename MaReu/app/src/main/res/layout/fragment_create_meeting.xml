<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".ui.meetings_list.MainActivity">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:minHeight="40dp"
        android:padding="4dp"
        app:hintTextColor="@color/ColorToolbar"
        android:textColorHint="@color/ColorToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Title"
            android:minWidth="300dp"
            android:minHeight="40dp"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@color/ColorToolbar"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="date"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:textColorHint="@color/ColorToolbar"
        android:hint="Date"
        android:padding="4dp"
        android:textAlignment="center"
        android:textColor="@color/ColorToolbar"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintEnd_toStartOf="@id/image_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutTitle" />

    <ImageView
        android:id="@+id/image_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@id/spinnerRoom"
        app:layout_constraintStart_toEndOf="@id/editTextDate"
        app:layout_constraintTop_toTopOf="@id/editTextDate"
        app:srcCompat="@drawable/baseline_calendar_month_24" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_bg"
        android:ems="5"
        android:hint="Time"
        android:inputType="time"
        android:padding="4dp"
        android:textAlignment="center"
        android:textColor="@color/ColorToolbar"
        android:textColorHint="@color/ColorToolbar"
        app:layout_constraintEnd_toEndOf="@id/editTextDate"
        app:layout_constraintStart_toStartOf="@id/editTextDate"
        app:layout_constraintTop_toBottomOf="@id/editTextDate" />

    <ImageView
        android:id="@+id/image_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@id/image_date"
        app:layout_constraintStart_toStartOf="@id/image_date"
        app:layout_constraintTop_toTopOf="@id/editTextTime"
        app:srcCompat="@drawable/baseline_access_time_28" />

    <Spinner
        android:id="@+id/spinnerRoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:minWidth="150dp"
        android:popupBackground="@drawable/edit_text_bg"
        android:popupElevation="6dp"
        android:background="@drawable/edit_text_bg"
        android:dropDownWidth="match_parent"
        android:dropDownVerticalOffset="@dimen/spinner_dropdown_offset"
        app:layout_constraintStart_toStartOf="@id/editTextDate"
        app:layout_constraintTop_toBottomOf="@id/editTextTime">

    </Spinner>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerRoom"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        app:hintTextColor="@color/ColorToolbar"
        android:textColorHint="@color/ColorToolbar"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="300dp"
            android:hint="Participants"
            android:inputType="textMultiLine"
            android:padding="4dp"
            android:textAlignment="center"
            android:background="@drawable/edit_text_bg"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:backgroundTint="@color/ColorToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutParticipants" />


</androidx.constraintlayout.widget.ConstraintLayout>